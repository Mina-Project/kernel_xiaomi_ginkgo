#
# Novatek NT36xxx touchscreen driver configuration
#
config TOUCHSCREEN_NT36xxx_HOSTDL_SPI_BBB
	bool "Novatek NT36xxx host download SPI driver"
	depends on ( SPI || TOUCHSCREEN_AAAAAA_BBB )
	default n
	help
	  Say Y here if you have a Novatek NT36xxx no flash touchscreen connected
	  to your system by SPI bus.

	  If unsure, say N.

config TOUCHSCREEN_NT36xxx_HOSTDL_SPI_CCC
	bool "Novatek NT36xxx host download SPI driver"
	depends on ( SPI || TOUCHSCREEN_AAAAAA_CCC )
	default n
	help
	  Say Y here if you have a Novatek NT36xxx no flash touchscreen connected
	  to your system by SPI bus.

	  If unsure, say N.
